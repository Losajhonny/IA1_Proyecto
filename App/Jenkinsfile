pipeline {
    agent {
        docker {
            image "node:14-alpine"
            args "-p 3000:3000"
        }
    }
    /*tools { nodejs "node" }*/
    stages {
        stage ("prueba") {
            steps { sh "node --version" }
        }
        stage ("install") {
            steps { sh "npm install" }
        }
        stage ("test") {
            steps { sh ".npm test" }
        }
        stage ("deploy") {
            steps { sh "npm start" }
        }
    }
}
