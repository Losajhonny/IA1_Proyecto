pipeline {
    agent any
    tools { nodejs "node16.2.0" }
    stages {
        stage ("build") {
            steps {
                dir ("App") {
                    sh "npm install"
                }
            }
        }
        stage ("test") {
            steps {
                dir ("App") {
                    sh "npm test"
                }
            }
        }
        stage ("deploy") {
            steps {
                dir ("App") {
                    sh "npm start"
                }
            }
        }
    }
}
